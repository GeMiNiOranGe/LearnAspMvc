@inject Source.Services.PlanetService planetService
@{
    ViewData["Title"] = "List of planets";
}

<h1>List of planets in the solar system</h1>
<div class="list-group">
    @foreach (var planet in planetService) {
        <a class="list-group-item list-group-item-action"
           asp-controller="Planet"
           asp-action="Detail"
           asp-route-name="@planet.Name">
            @planet.Name
        </a>
    }
</div>